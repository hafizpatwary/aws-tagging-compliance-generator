{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "Denyecs",
      "Effect": "Deny",
      "Action": [
        "ecs:CreateCapacityProvider",
        "ecs:CreateCluster",
        "ecs:CreateTaskSet",
        "ecs:RegisterTaskDefinition"
      ],
      "Resource": "*",
      "Condition": {
        "Null": {
          "aws:RequestTag/team": "true",
          "aws:RequestTag/cost-centre": "true"
        }
      }
    }
  ]
}