{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "Denysnow-device-management",
      "Effect": "Deny",
      "Action": [
        "snow-device-management:CreateTask",
        "snow-device-management:ListTagsForResource"
      ],
      "Resource": "*",
      "Condition": {
        "Null": {
          "aws:RequestTag/team": "true",
          "aws:RequestTag/cost-centre": "true"
        }
      }
    }
  ]
}